<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/gold_text</item>
        <item name="colorPrimaryDark">#194C5F</item>
        <item name="colorAccent">@color/gold_dark</item>
        <item name="drawerArrowStyle">@style/Hamburger</item>

        <!-- menu dots -->
        <item name="android:textColorSecondary">@color/gold_text</item>
    </style>

    <style name="Hamburger" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/gold_text</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
    </style>

    <style name="HorizontalProgressBar">
        <item name="android:fadeScrollbars">false</item>
        <item name="android:scrollbarSize">1dp</item>
        <item name="android:scrollbarStyle">insideInset</item>
        <item name="android:scrollbarThumbHorizontal">@drawable/horizontal_progress_indicator</item>
        <item name="android:scrollbarTrackHorizontal">@drawable/horizontal_progress_bg</item>
        <item name="android:scrollbars">horizontal</item>
        <item name="android:scrollbarAlwaysDrawHorizontalTrack">true</item>
    </style>

</resources>